<form method="post" name="login" action="[% yesh.uri_for("/login") %]" enctype="multipart/form-data">
   <fieldset>
     <legend>Sign in</legend>
     <p>
        <label>Username</label>
        <input name="username" value="" />
     </p>
     <p>
        <label>Password</label>
        <input type="password" name="password" value="" />
     </p>
     <p>
        <input type="submit" value="Sign in" />
     </p>
    </fieldset>
<p>If you are a new user, you may <a href="[% yesh.uri_for("/user/register") %]">register here</a>.</p>
</form>
